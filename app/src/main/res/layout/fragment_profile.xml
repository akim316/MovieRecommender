<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cbk.TechTrollywood.ProfileActivityFragment"
    tools:showIn="@layout/activity_profile">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent DVDs"
        android:id="@+id/recent_dvds_button"
        android:layout_below="@+id/recent_dvds_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Movies"
        android:id="@+id/recent_movies_button"
        android:layout_below="@+id/recent_movies_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Movies"
        android:id="@+id/search_movies_button"
        android:layout_alignParentTop="true" />

</LinearLayout>
